<div class="contents">
  <div class="new-container">
    <h3>
      <%= link_to "Menu Edit", root_path%> 
    </h3>
<%= form_with(model: @post, local: true) do |form| %>
  <%= form.label "料理名" %>
  <span class="indispensable">: 必須</span><br/>
  <%= form.text_field :title %><br/>

  <%= form.label "写真" %>
  <span class="indispensable">: 必須</span><br/>
  <%= form.file_field :image, id:"item-image",class:"new-image" %><br/>

  <div id="image-list"></div>
  <%= form.label "レシピ・メモ" %>
  <span class="indispensable">：必須</span>

  <%= form.text_area :text, placeholder: "詳細・食材など記述してください", rows: "10" %>

  <div class="weight-bold-text">
  ジャンル
  <span class="indispensable">：必須</span>
  </div>
  <%= form.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>

  <%= form.submit "変更" %>
<% end %>
  </div>
</div>
