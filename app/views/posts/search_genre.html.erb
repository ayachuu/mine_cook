<h1>
  検索結果
</h1>
<%= link_to "戻る", root_path %>
<% if @results.length !=0 %>

  <%  @results.each do |post| %>
    <div class='main'>
      <div class='item-contents'>
        <h2 class='title'></h2>
          <%if post%>
            <div class='list'>
              <%= link_to post_path(post.id) do %>
              <div class='item-img-content'>
                <%= image_tag post.image , class: "item-img" if post.image.attached? %>
              </div>
              <% end %>
            </div>
           <br>

          <%end%>
      </div>
    </div>

  <% end %>
<% else %>
  該当する商品はありません
<% end %>

