<div class="main">

  <div class="top-page-header">
    <div class="section-global-nav-left">
    </div>
    <div class="header-title">
      Mine
    </div>
    <div class="header-side-bottom">
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
    </div>

  </div>
  
  <div class="category-content">

    <ul class="jenre-list">
      <li>Main-dish</li>
      <li>Soup</li>
      <li>Side-dish1</li>
      <li>Side-dish2</li>
      <li>Dessert</li>
    </ul>
  </div>
  <section id="main">
    <div class="main-wrapper">
      <div class= "title">[おすすめ]</div>
      <div class="main-content">
        <section>
          <div class="left-content">
            <% @random.each do |post| %>
              <%= image_tag post.image, class:"main-image" %>
              <p class="main-title"><%= "【料理名】#{post.title}" %></p>
              <p class="main-text"><%= "【レシピ・食材メモ】 #{post.text.truncate(20)}" %></p>
            <% end %>
          </div>
        </section>
        <section>
          <div class="right-content">
            <div class="new-menu">
              <p><%=link_to 'Menu(登録)', new_post_path %></P>
            </div>
            <div class="serch-menu">
              <p><%=link_to 'Menu（編集・削除）', post_path(:id) %></p>
            </div>
            <div class="today-menu">
             <P><%= link_to "今日のMenu", post_path(@random) %></P>
            </div>
      </div>
    </div>
  </section>

<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<div class="swiper-container">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
         <% @post.each do |post| %>
        <div class="swiper-slide">
          <%= image_tag post.image, class:"slide-image" %>
        </div>
      <% end %>
  </div>
  <div class="swiper-pagination"></div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
  <div class="swiper-scrollbar"></div>
</div>
<script>
  var swiper = new Swiper ('.swiper-container', {
    loop: true,  
    autoplay: {
      dispray: 2000,
      disable0nInteraction: false,
    },
    slidesPerView:2,
    centeredSlides : true, 
    effect: 'coverflow', 
    
    pagination: {  //ページネーションを表示
      el: '.swiper-pagination',
      clickable: true,  //アイコンをクリックすると対応するスライドに移動
    },
  
    navigation: {  //ナビゲーションボタンを表示
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  })
</script> 

