<div class="show_list">
  <div class="show_image">
    <%= image_tag @post.image,class: "menu-img"%>
  </div>

  <div class="show_title">
    <%= @post.title%>
  </div>

  <div class="show_text">
    <div class="note4">
      <div class="sen4">
        <%= @post.text%>
      </div>
    </div>
  </div>
</div>
<div>
  <ul class="btn-content">
    <li>
      <%= link_to '編集', edit_post_path(@post.id), method: :get, class:"change-button" %>
    </li>
    <li>
      <%= link_to '削除', post_path(@post.id), method: :delete, class:"change-button" %>
    </li>
    <li>
      <%= link_to "戻る", root_path, class:"change-button" %>
    </li>
  </ul>
</div>